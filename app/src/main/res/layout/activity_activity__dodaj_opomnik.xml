<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.katja.zdravila.activity_Dodaj_opomnik"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:scrollIndicators="right"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal">

            <TimePicker
                android:id="@+id/timePickerZdravila"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/spinnerZdravila"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnDodaj"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:background="#00ffffff"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm"
                android:id="@+id/switchAlarm"
                android:layout_gravity="fill_horizontal|right"
                android:layout_marginLeft="30dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tvAlarm"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal|right"
                android:layout_marginLeft="0dp"
                android:textAlignment="center"
                android:layout_columnSpan="2"
                android:textSize="15dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fbtnPotrdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:src="@android:drawable/ic_menu_save"
                android:layout_row="5"
                android:layout_column="1" />
        </GridLayout>
    </ScrollView>

</RelativeLayout>
